{
  "name": "ngx-vertex-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/ngx-vertex-demo/src",
  "prefix": "ngx-vertex",
  "tags": [],
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/ngx-vertex-demo",
        "index": "apps/ngx-vertex-demo/src/index.html",
        "main": "apps/ngx-vertex-demo/src/main.ts",
        "polyfills": "apps/ngx-vertex-demo/src/polyfills.ts",
        "tsConfig": "apps/ngx-vertex-demo/tsconfig.app.json",
        "assets": [
          "apps/ngx-vertex-demo/src/favicon.ico",
          "apps/ngx-vertex-demo/src/assets",
          "apps/ngx-vertex-demo/src/_redirects"
        ],
        "styles": ["apps/ngx-vertex-demo/src/styles.scss"],
        "scripts": ["node_modules/leader-line/leader-line.min.js"],
        "vendorChunk": true,
        "extractLicenses": false,
        "buildOptimizer": false,
        "sourceMap": true,
        "optimization": false,
        "namedChunks": true
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/ngx-vertex-demo/src/environments/environment.ts",
              "with": "apps/ngx-vertex-demo/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": true,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "10kb"
            }
          ]
        }
      },
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": ""
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "buildTarget": "ngx-vertex-demo:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "ngx-vertex-demo:build:production"
        }
      },
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "ngx-vertex-demo:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/ngx-vertex-demo/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/ngx-vertex-demo/jest.config.ts",
        "tsConfig": "apps/ngx-vertex-demo/tsconfig.spec.json"
      },
      "outputs": ["{workspaceRoot}/coverage/apps/ngx-vertex-demo"]
    },
    "deploy": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "curl -X POST -d {} https://api.netlify.com/build_hooks/5fc512d8716a87008b24a307"
          }
        ]
      }
    }
  }
}
